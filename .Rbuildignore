# --------------------------------------------------
# RStudio / project metadata
# --------------------------------------------------
^.*\.Rproj$
^\.Rproj\.user$

# --------------------------------------------------
# GitHub / Version control metadata (ignored from tarball)
# --------------------------------------------------
^\.git/$
# Keeping .gitignore in the build is fine but optional:
# ^\.gitignore$

# --------------------------------------------------
# Top-level non-package files
# --------------------------------------------------
# README files are normally ALLOWED in an R package,
# so remove the ignores unless you want them excluded.
# ^README\.txt$
# ^README\.md$

# CITATION at root should be ignored; place real one at inst/CITATION
^CITATION$

# If you use README.Rmd to generate README.md:
^README\.Rmd$

# --------------------------------------------------
# Vignettes & build cache
# (Ignore intermediate artefacts; keep .Rmd!)
# --------------------------------------------------
^vignettes/.+\.html$
^vignettes/.+\.pdf$
^vignettes/.+\.md$
^vignettes/.*_cache$
^vignettes/cache$

# Quarto temporary directories
^_freeze/
^_extensions/

# --------------------------------------------------
# pkgdown website (optional)
# --------------------------------------------------
^_pkgdown\.yml$
^docs/$

# --------------------------------------------------
# R CMD check / build artifacts
# --------------------------------------------------
^.*\.Rcheck/
^.*\.tar\.gz$

# --------------------------------------------------
# Temporary / OS files
# --------------------------------------------------
^\.DS_Store$
^Thumbs\.db$

# --------------------------------------------------
# Tests & local scratch files
# --------------------------------------------------
^tests/testthat/Rplots.*\.pdf$
^.*~$

# --------------------------------------------------
# Extra content NOT included in the built package
# but allowed to stay in the GitHub repo
# --------------------------------------------------

# Curated full demo results: KEEP on GitHub, EXCLUDE from tarball
^inst/extdata/echogo_demo_results/.*

# Built documentation directories (generated by R CMD build/check)
^doc$
^Meta$
